<html>
    <head><title>Student Registration</title>
    <style>
        body{
            background-image: url('images/david-carboni-640765-unsplash.jpg');
            background-size: cover;
            margin-top: 120px;
        }
        </style>
    </head>
    <body>
        <center>
            <h1>Student Registration form</h1>
            <label>
                    <input id="id" placeholder="Roll no" type="text" required />
                    
                  </label><br>
            <label>
                    <input id="name" placeholder="User name" type="text" required />
                    
                  </label><br>
                  <label>
                    <input id="email" placeholder="Email-id" type="email" required />
                    
                  </label><br>
                  <label>
                        <input id="pass" placeholder="Password" type="password" required />
                        
                      </label><br>
                      <label>
                            <input id="cmf" placeholder="Confirm password" type="password" required />
                            
                          </label><br>
                          <label>
                                <input id="phone" placeholder="Phone number" type="text" required />
                                
                              </label><br>
                  <button onclick="y()">Submit</button>
                </center>
        <script>
        function y()
        {
            if(document.getElementById("pass").value == document.getElementById("cmf").value)
            {
                window.location.href = 'register' + '/'+ document.getElementById("id").value + "/" + document.getElementById("name").value  + '/' + document.getElementById("pass").value + '/' + document.getElementById("email").value + '/' + document.getElementById("phone").value;
            }
            else
            {
                alert("Password doesn't match");
            }
        }
        function x()
        {
            document.getElementById("id").value="";
            document.getElementById("name").value="";
            document.getElementById("pass").value="";
            document.getElementById("cmf").value="";
            document.getElementById("email").value="";
            document.getElementById("phone").value="";
        }
        </script>
        <style>
            h1{
                color: #CCC;
            }
        input {
            text-align: center;
  margin-bottom:3px;
  padding:20px;
  width: 45%;
  border:1px solid #CCC
}
button {
  padding:10px
}
label {
  cursor:pointer
}
        </style>
    </body>
</html>

